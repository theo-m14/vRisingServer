{% extends 'base.html.twig' %}

{% block title %}Création Serveur
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
	{{ encore_entry_script_tags('createServer') }}
{% endblock %}

{% block body %}
	{{form_start(form)}}
	{{form_widget(form.name, {'attr' : {'placeholder': 'Nom du serveur' }})}}
	{{ form_errors(form.name) }}
	{{form_label(form.clan_size, 'Taille de clan')}}
	{{form_widget(form.clan_size)}}
	{{ form_errors(form.clan_size) }}
	{{form_label(form.type, 'Type de serveur')}}
	{{form_widget(form.type)}}
	{{ form_errors(form.type) }}
	{{form_label(form.openDay, 'Date de lancement')}}
	{{form_widget(form.openDay)}}
	{{ form_errors(form.openDay) }}
	{{form_label(form.wipe, 'Serveur à reset')}}
	{{form_widget(form.wipe)}}
	{{ form_errors(form.wipe) }}
	{{form_label(form.wipe_date, 'Date de reset', {'label_attr' : {'id' : 'wipeDate'}})}}
	{{form_widget(form.wipe_date)}}
	{{ form_errors(form.wipe_date) }}
	{{ form_errors(form.description) }}
	{{form_widget(form.description, {'attr' : {'placeholder' : 'Description serveur'}})}}
	{{form_label(form.discord, 'Serveur discord')}}
	{{ form_errors(form.discord) }}
	{{form_widget(form.discord)}}
	<button type="submit">Enregistrer</button>
	{{form_end(form)}}
{% endblock %}
