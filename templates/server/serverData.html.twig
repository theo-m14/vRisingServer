{% for server in servers %}
	<div class='server-card'>
		<div class="card-left">
			<h4>{{server.name}}</h4>
			<p>{{server.description}}</p>
		</div>
		<div class="card-right">
			{% if server.note %} 
				<div class="star-container">
					{% for i in 1..5 %}
						{% if i<=server.note|round %}
							<div class='full-star' >*</div>
						{% else %}
							<div class='empty-star' >-</div>
						{% endif %}
					{% endfor %}
				</div>
			 {% endif %}
			<p class='review-info'>{{server.reviews|length}} AVIS</p>
			<p class='{{server.type ? 'PVP' : 'PVE'}}'>
				{{server.type ? 'PVP' : 'PVE'}}</p>
			{% if server.userOwner == app.user %}
				<a href="{{path('app_server_edit', {'id' : server.id})}}">Editer</a>
			{% endif %}
			<a class='btn' href="{{path('app_server_readOne', {'id' : server.id})}}">DÃ©tails</a>
		</div>
	</div>
{% endfor %}
<div>
	<nav>
		{{ knp_pagination_render(servers) }}
	</nav>
</div>
