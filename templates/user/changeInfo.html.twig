{% extends 'base.html.twig' %}

{% block title %}Changement d'information
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('checkInfoAvailablity') }}
	{{ encore_entry_script_tags('burger') }}
{% endblock %}

{% block body %}
	<section class="changeInfo">
		{% for error in app.session.flashbag.get('error') %}
			<p class="error">{{ error }}</p>
		{% endfor %}
		<h2>Changement d'information</h2>
		{{form_start(form)}}
		{% if form.username is defined %}
			{{form_widget(form.username)}}
		{% endif %}
		{% if form.email is defined %}
			{{form_widget(form.email)}}
		{% endif %}
		<button type="submit" id='submitBtn' disabled>Changer</button>
		{{form_end(form)}}
		<p id='infoAvailablity'></p>
	</section>
{% endblock %}
